package ftk.test.tester
{
	import ftk.ui.control.Container;
	import ftk.ui.layout.Grid;

	/**
	 * BasicTest
	 * 
	 * @author Tang Bin
	 * @since 2011.01
	 */
	public class BasicTest extends Container
	{

		/******************* OVERRIDE **************************************************/
		/******************* DEFINE ****************************************************/
		private var grid:Grid;

		/******************* GETTER and SETTER *****************************************/
		/******************* CONSTRUCTOR ***********************************************/
		public function BasicTest()
		{
			super();
			//
			grid = new Grid();
			grid.percentHeight = grid.percentWidth = 1;
			this.addAll(grid);
			grid.rows = ["30%", "30%", "40%"];
			grid.columns = ["30%", "30%", "40%"];
			grid.rebuild();
			trace(grid.width, grid.height);
		}
		/******************* PUBLIC ****************************************************/
		
		
		
		/******************* PROTECTED *************************************************/
		
		
		
		/******************* PRIVATE ***************************************************/
		
		
		
		/******************* PRIVATE ***************************************************/
	}
}